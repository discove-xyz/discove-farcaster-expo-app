{
  "name": "discove",
  "version": "1.0.0",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "npx expo start --dev-client",
    "android": "npx expo run:android",
    "ios": "npx expo run:ios",
    "tunnel": "npx expo start --tunnel",
    "web": "npx expo start --web",
    "test": "jest --watchAll",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "bundle:analyze": "yarn run react-native-bundle-visualizer --expo true",
    "build": "eas build",
    "version": "eas -v",
    "//": "Ships a new build to apple connect that can be manually assigned",
    "publish": "ENV=prod eas update --branch production --message",
    "ship:ios": "eas build --profile production --platform ios && eas submit --platform ios"
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community"
    ],
    "ignorePatterns": [
      "**/dist/*"
    ],
    "rules": {
      "semi": "off",
      "no-bitwise": "off",
      "prettier/prettier": "off",
      "no-useless-escape": "off",
      "dot-notation": "off",
      "no-alert": "off",
      "react/react-in-jsx-scope": "off",
      "react-native/no-inline-styles": "off",
      "semi-style": "off",
      "quotes": "off",
      "curly": "off",
      "@typescript-eslint/no-unused-vars": "off"
    }
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@discove/ui": "*",
    "@discove/util": "*",
    "@expo/ngrok": "^4.1.0",
    "@expo/react-native-action-sheet": "^4.0.1",
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "1.17.11",
    "@react-native-picker/picker": "2.4.8",
    "@react-native-segmented-control/segmented-control": "2.4.0",
    "@react-navigation/bottom-tabs": "^6.0.5",
    "@react-navigation/drawer": "^6.6.2",
    "@react-navigation/material-top-tabs": "^6.6.0",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.1.0",
    "@sentry/react-native": "4.13.0",
    "@shopify/flash-list": "1.4.0",
    "@standard-crypto/farcaster-js": "^5.5.4",
    "@supabase/supabase-js": "^2.7.0",
    "dotenv": "^16.0.3",
    "expo": "~48.0.11",
    "expo-application": "~5.1.1",
    "expo-asset": "~8.9.1",
    "expo-av": "~13.2.1",
    "expo-camera": "~13.2.1",
    "expo-checkbox": "~2.3.1",
    "expo-constants": "~14.2.1",
    "expo-device": "~5.2.1",
    "expo-dynamic-app-icon": "^1.1.8",
    "expo-file-system": "~15.2.2",
    "expo-font": "~11.1.1",
    "expo-haptics": "~12.2.1",
    "expo-image": "^1.0.0",
    "expo-linear-gradient": "~12.1.2",
    "expo-linking": "~4.0.1",
    "expo-localization": "~14.1.1",
    "expo-splash-screen": "~0.18.1",
    "expo-status-bar": "~1.4.4",
    "expo-system-ui": "~2.2.1",
    "expo-updates": "~0.16.4",
    "expo-web-browser": "~12.1.1",
    "posthog-react-native": "^2.5.2",
    "query-string": "^8.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.6",
    "react-native-dropdown-picker": "^5.4.6",
    "react-native-email-link": "^1.14.5",
    "react-native-gesture-handler": "~2.9.0",
    "react-native-mmkv": "^2.8.0",
    "react-native-pager-view": "6.1.2",
    "react-native-reanimated": "2.14.4",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-tab-view": "^3.5.1",
    "react-native-url-polyfill": "^1.3.0",
    "react-native-web": "~0.18.10",
    "react-native-webview": "11.26.0",
    "sentry-expo": "6.1.1",
    "swr": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/react": "~18.0.33",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-expo": "^48.0.2",
    "prettier": "^2.8.7",
    "react-native-bundle-visualizer": "^3.1.3",
    "react-test-renderer": "18.2.0",
    "typescript": "^4.9.5"
  },
  "private": true
}